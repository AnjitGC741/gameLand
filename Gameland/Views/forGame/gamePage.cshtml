<title>Game Content</title>

@*navbar design begins*@
<div class="navbar1">
    <div class="forLogo">
        <img src="~/Content/homePage/image/gameland.jpg" alt="logo" />
    </div>
    <div class="forTopic">
        <ul>
            <li><a href="@Url.Action("homePage","forHomePage")">Home</a></li>
            <li><a href="#productCategories">Product</a></li>
            <li><a href="@Url.Action("forCart","myCart")">Cart</a></li>
            <li><a href="@Url.Action("contactUsPage","contactUs")">Contact</a></li>
            <li><a href="@Url.Action("aboutUs","forHomePage")">About Us</a></li>
        </ul>
    </div>
    <div class="forLogOut">
        <button type="button" class="btn btn-secondary"><a href="@Url.Action("loginPage","forLoginPage")"> Sign Out</a></button>
    </div>

</div>
@*navbar desing ends*@
@*Game name and search button starts*@
<div class="gameNameAndSearch">
    <div class="gameText">
        <p>Games</p>
    </div>
    <div class="searchButton">
        @using (Html.BeginForm("Search", "forGame", FormMethod.Post))
        {
            <div class="searchbar">
                <input type="text" class="searchbar__input" name="name1" placeholder="Search Games">
                <button type="submit" class="searchbar__button">
                    <i class="material-icons">search</i>
                </button>
            </div>
        }
    </div>
</div>

@*Game name and search button ends*@
@*Total product content starts*@
<div class="mainDiv">
    <div class="totalGames">
        <p>@Model.Count<span>movies</span></p>
    </div>
    <div class="categories">
        <button class="click" style="color: #696969; font-family:'Poppins', sans-serif; ">Categories<i class="fa fa-angle-down" style="margin-left:10px;"></i></button>

        <div class="list">
            @using (Html.BeginForm("Sort", "forGame", FormMethod.Post))
            {
                <input type="text" hidden value="Open World" name="name2" />
                <button type="submit" class="links" style="color: #696969; font-family:'Poppins', sans-serif;">Open World</button>
            }
            @using (Html.BeginForm("Sort", "forGame", FormMethod.Post))
            {
                <input type="text" hidden value="Action" name="name2" />
                <button type="submit" class="links" style="color: #696969; font-family:'Poppins', sans-serif;">Action</button>
            }
            @using (Html.BeginForm("Sort", "forGame", FormMethod.Post))
            {
                <input type="text" hidden value="Sport" name="name2" />
                <button type="submit" class="links" style="color: #696969; font-family:'Poppins', sans-serif;">Sport</button>
            }
            @using (Html.BeginForm("Sort", "forGame", FormMethod.Post))
            {
                <input type="text" hidden value="Shooting" name="name2" />
                <button type="submit" class="links" style="color: #696969; font-family:'Poppins', sans-serif;">Shooting</button>
            }





        </div>

    </div>


    <script>

        let click = document.querySelector('.click');

        let list = document.querySelector('.list');

        click.addEventListener("click", () => {

            list.classList.toggle('newlist');

        });
    </script>

</div>
@*Total poduct content ends*@
@*Games content starts*@
<div class="gameContent">
    @foreach (var data in Model)
    {
        using (Html.BeginForm("AddToCartGame", "myCart", FormMethod.Post, new { @class = "", id = "" }))
        {
            <input type="hidden" value="@data.gameName" name="productName" />
            <div class="gameBox">
                <div class="forGameImage">
                    <img src="@(data.gamesImg != null ? Url.Content(data.gamesImg) : "")" alt="image" />
                </div>
                <div class="forGamePrice">
                    <div class="gameName">
                        <p>@(data.gameName)</p>
                    </div>
                    <div class="gameOriginalPrice">
                        <p>Rs <span>@(data.gamePrice)</span></p>
                    </div>
                    <div class="gameCart">
                        <button>Add To Cart <i class="fa fa-shopping-cart" style="color:white ;"></i></button><span>@(data.productType)</span>
                    </div>
                </div>
            </div>
        }
    }
    </div>@*gameContent div closing*@



@*content ends*@
