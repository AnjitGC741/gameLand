

@model List<Gameland.Models.seriesData>
@{
    ViewBag.Title = "moviePage";
    Layout = null;
}

<html>
<head>
    <title>Series</title>
    @*css*@

    <link rel="stylesheet" href="~/Content/product/Series/seriesCss.css" />
    @*css ends*@
    @*Bootstrap link*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @*Bootstrap link ends*@
    @*Font awesome link*@
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @*Font awesome link ends*@
    @*Font style link*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Signika+Negative:wght@300&display=swap" rel="stylesheet">
    @*Font style link ends*@
</head>
<body>
    <button class="cartButton"><a href="#"><i class="fa fa-shopping-cart" id="cart"></i><span class="cartSpan">(0)</span></a></button>
    @*navbar design begins*@
    <div class="navbar1">
        <div class="forLogo">
            <img src="~/Content/homePage/image/gameland.jpg" alt="logo" />
        </div>
        <div class="forTopic">
            <ul>
                <li><a href="@Url.Action("homePage","forHomePage")">Home</a></li>
                <li><a href="@Url.Action("homePage","forHomePage")">Product</a></li>
                <li><a href="#">Cart</a></li>
                <li><a href="#">Contact</a></li>
                <li><a href="#">About Us</a></li>
            </ul>
        </div>
        <div class="forLogOut">
            <button type="button" class="btn btn-secondary"><a href="@Url.Action("loginPage","forLoginPage")"> Sign Out</a></button>
        </div>

    </div>
    @*navbar design ends*@
    @*movies name and search button starts*@
    <div class="seriesNameAndSearch">
        <div class="seriesText">
            <p>Series</p>
        </div>
        <div class="searchButton">
            @using (Html.BeginForm("Search","forSeries", FormMethod.Post))
            {
                <div class="searchbar">
                    <input type="text" class="searchbar__input" name="name1" placeholder="Search Series">
                    <button type="submit" class="searchbar__button">
                        <i class="material-icons">search</i>
                    </button>
                </div>
            }
        </div>
    </div>

    @*movies name and search button ends*@
    @*Total product content starts*@
    <div class="mainDiv">
        <div class="totalSeries">
            <p>@Model.Count()<span>series</span></p>
        </div>
        <div class="categories">
            <button class="click" style="color: #696969; font-family:'Poppins', sans-serif; ">Categories<i class="fa fa-angle-down" style="margin-left:10px;"></i></button>

            <div class="list">

                <button class="links" style="color: #696969; font-family:'Poppins', sans-serif;">Action</button>

                <button class="links" style="color: #696969; font-family:'Poppins', sans-serif;">Horror</button>

                <button class="links" style="color: #696969; font-family:'Poppins', sans-serif;">Comedy</button>

                <button class="links" style="color: #696969; font-family:'Poppins', sans-serif;">Animated</button>



            </div>

        </div>
        <div class="sortBy1">
            <button class="click1" style="color: #696969; font-family:'Poppins', sans-serif; ">Sort By<i class="fa fa-angle-down" style="margin-left:10px;"></i></button>

            <div class="list1">

                <button class="links1" style="color: #696969; font-family:'Poppins', sans-serif;">Name</button>

                <button class="links1" style="color: #696969; font-family:'Poppins', sans-serif;">Price</button>

                <button class="links1" style="color: #696969; font-family:'Poppins', sans-serif;">Best Selling</button>



            </div>

        </div>

        <script>

            let click = document.querySelector('.click');

            let list = document.querySelector('.list');

            click.addEventListener("click", () => {

                list.classList.toggle('newlist');

            });
            let click1 = document.querySelector('.click1');

            let list1 = document.querySelector('.list1');

            click1.addEventListener("click", () => {

                list1.classList.toggle('newlist1');

            });
        </script>

    </div>
    @*Total poduct content ends*@
    @*movie content starts*@
    <div class="seriesContent">
        @foreach (var data in Model)
        {
            using (Html.BeginForm("AddToCartSeries", "myCart", FormMethod.Post, new { @class = "", id = "" }))
            {
                <input type="hidden" value="@data.seriesName" name="productName" />
                <div class="seriesBox">
                    <div class="forSeriesImage">
                        <img src="@(data.seriesImg != null ? Url.Content(data.seriesImg) : "")" alt="image" />
                    </div>
                    <div class="forSeriesPrice">
                        <div class="seriesName">
                            <p>@(data.seriesName)</p>
                        </div>
                        <div class="seriesOriginalPrice">
                            <p>Rs<span>@(data.seriesPrice) </span></p>
                        </div>
                        <div class="seriesCart">
                            <button>Add To Cart <i class="fa fa-shopping-cart" style="color:white ;"></i></button><span>@(data.productType)</span>
                        </div>
                    </div>
                </div>
            }
        }

    </div>@*movie content end div*@
    @*movie content ends*@
    @*Footer Contain start*@
    <footer class="footer11">
        <div class="container11">
            <div class="row11">

                <div class="footerCol11">
                    <h4>Quick Link</h4>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Product</a></li>
                        <li><a href="#">Cart</a></li>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
                <div class="footerCol11">
                    <h4>Get help</h4>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms and Condition</a></li>
                        <li><a href="#">Returns</a></li>
                        <li><a href="#">Payment Options</a></li>
                    </ul>
                </div>
                <div class="footerCol11">
                    <h4>Install App</h4>
                    <div class="iconImg11" style="margin-top: 10px;">
                        <button><a href="#"><i class="fab fa-app-store"></i></a></button>
                        <button> <a href="#"><i class="fab fa-google-play"></i></a></button>
                    </div>
                    <h4 style="margin-top: 10px;">Secured payment gateway</h4>
                    <div class="iconImg11">
                        <button><a href="#"><i class="fa fa-cc-mastercard" style="font-size:25px;"></i></a></button>
                        <button><a href="#"><i class="fa fa-cc-visa"></i></a></button>
                        <button> <a href="#"><i class="fa fa-credit-card"></i></a></button>

                    </div>


                </div>
                <div class="footerCol11" style="margin-left: 60px;">
                    <h4>follow us</h4>
                    <div class="iconImg11">
                        <button><a href="#"><i class="fab fa-facebook-f"></i></a></button>
                        <button><a href="#"><i class="fab fa-twitter"></i></a></button>
                        <button><a href="#"><i class="fab fa-instagram"></i></a></button>
                        <button><a href="#"><i class="fab fa-linkedin-in"></i></a></button>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @*Footer Contain Ends*@
</body>
</html>

