@model List<Gameland.Models.cartData>
@{
    ViewBag.Title = "forCart";
    Layout = null;
}
<html>
<head>
    <title>Cart</title>
    <link rel="stylesheet" href="~/Content/cart/cartCss1.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Signika+Negative:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    @*navbar design begins*@
    <div class="navbar1">
        <div class="forLogo">
            <img src="~/Content/homePage/image/gameland.jpg" alt="logo" />
        </div>
        <div class="forTopic">
            <ul>
                <li><a href="@Url.Action("homePage","forHomePage")">Home</a></li>
                <li><a href="#productCategories">Product</a></li>
                <li><a href="#">Cart</a></li>
                <li><a href="@Url.Action("contactUsPage","contactUs")">Contact</a></li>
                <li><a href="#">About Us</a></li>
            </ul>
        </div>
        <div class="forLogOut">
            <button type="button" class="btn btn-secondary"><a href="@Url.Action("loginPage","forLoginPage")"> Sign Out</a></button>
        </div>

    </div>
    @*navbar desing ends*@
    <div>

    </div>
    <div class="yourOrderBox">
       <p>Your Order @Model.Count()</p>
    </div>
    @*Cart body*@
<div class="cartBox" id="cartBox">
    <div class="emptyCartMsgBox" id="emptyCartMsgBox">
        <img src="~/Content/cart/emptyCart.jpg" height="300" width="300" />
        <p>Your Cart is empty</p>
        <button class="btn btn-secondary"><a href="@Url.Action("homePage","forHomePage")">Goto Shop</a></button>
    </div>
    <div class="tableBox" id="tableBox">
        <table class="table" border="1">
            <tr>
                <th>UserName</th>
                <th>Product Image</th>
                <th>Product</th>
                <th>Type</th>
                <th>Price</th>
                <th>Remove</th>
            </tr>
            @foreach (var data in Model)
            {
        <tr>
            <td>@(data.userName)</td>
            <td><img src="@(data.productImg!=null?Url.Content(data.productImg):"")" height="100" width="50" /></td>
            <td>@(data.productName)</td>
            <td>@(data.productType)</td>
            <td>@(data.price)</td>
            <td><a href="@Url.Action("Delete1", new {name=data.productName})"><i class="fa fa-trash"></i></a></td>
            @* <td><button><a href="@Url.Action("Delete", new {name=data.productName})"></td>*@
          


        </tr>


            }
            <tr>
                <td>Total</td>
                <td>@(Model.Sum(x=>x.price))</td>
            </tr>
        </table>
        <button class="btn btn-success "><a href="@Url.Action("MakePayment")">Make payment</a></button>
    </div>
</div>
    <script>
        if (@Model.Count()== 0) {
            document.getElementById("emptyCartMsgBox").style.visibility = "visible";
            document.getElementById("cartBox").style.height = "400px";
        }
        else {
            document.getElementById("tableBox").style.visibility = "visible";
        }
    </script>
    @*Cart body ends*@
    @*Footer Contain start*@
    <footer class="footer">
        <div class="container1">
            <div class="row1">

                <div class="footerCol">
                    <h4>Quick Link</h4>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Product</a></li>
                        <li><a href="#">Cart</a></li>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
                <div class="footerCol">
                    <h4>Get help</h4>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms and Condition</a></li>
                        <li><a href="#">Returns</a></li>
                        <li><a href="#">Payment Options</a></li>
                    </ul>
                </div>
                <div class="footerCol">
                    <h4>Install App</h4>
                    <div class="iconImg" style="margin-top: 10px;">
                        <button><a href="#"><i class="fab fa-app-store"></i></a></button>
                        <button> <a href="#"><i class="fab fa-google-play"></i></a></button>
                    </div>
                    <h4 style="margin-top: 10px;">Secured payment gateway</h4>
                    <div class="iconImg">
                        <button><a href="#"><i class="fa fa-cc-mastercard" style="font-size:25px;"></i></a></button>
                        <button><a href="#"><i class="fa fa-cc-visa"></i></a></button>
                        <button> <a href="#"><i class="fa fa-credit-card"></i></a></button>

                    </div>


                </div>
                <div class="footerCol" style="margin-left: 60px;">
                    <h4>follow us</h4>
                    <div class="iconImg">
                        <button><a href="#"><i class="fab fa-facebook-f"></i></a></button>
                        <button>	<a href="#"><i class="fab fa-twitter"></i></a></button>
                        <button><a href="#"><i class="fab fa-instagram"></i></a></button>
                        <button><a href="#"><i class="fab fa-linkedin-in"></i></a></button>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @*Footer Contain Ends*@
</body>
</html>


